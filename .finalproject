    elseif app.Dough_3.Visible = 'on' & app.Sauce_3.Visible = 'on' & app.Cheese_3.Visible = 'on' & app.Pepperoni_3.Visible = 'on' & app.Mushroom_3.Visible = 'off'
        app.ScoreEditField_2.Value = 40;
    elseif app.Dough_3.Visible = 'on' & app.Sauce_3.Visible = 'on' & app.Cheese_3.Visible = 'on' & app.Pepperoni_3.Visible = 'off' & app.Mushroom_3.Visible = 'off' 
        app.ScoreEditField_2.Value = 30;
    elseif app.Dough_3.Visible = 'on' & app.Sauce_3.Visible = 'on' & app.Cheese_3.Visible = 'off' & app.Pepperoni_3.Visible = 'off' & app.Mushroom_3.Visible = 'off'
        app.ScoreEditField_2.Value = 20;
    elseif app.Dough_3.Visible = 'on' & app.Sauce_3.Visible = 'off' & app.Cheese_3.Visible = 'off' & app.Pepperoni_3.Visible = 'off' & app.Mushroom_3.Visible = 'off'
        app.ScoreEditField_2.Value = 10;
    else 
        app.ScoreEditField_2.Value = 0; 
    end 
        value = app.ScoreEditField_2.Value;
        end
